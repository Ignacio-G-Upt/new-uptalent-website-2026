---
interface Props {
  eyebrow?: string;
  h1: string;
  subcopy?: string;
  primaryCta?: { label: string; href: string };
  secondaryCta?: { label: string; href: string };
}

const { eyebrow, h1, subcopy, primaryCta, secondaryCta } = Astro.props as Props;
---

<header class="hero">
  {eyebrow && <p class="eyebrow">{eyebrow}</p>}
  <h1>{h1}</h1>
  {subcopy && <p class="subcopy">{subcopy}</p>}
  <div class="actions">
    {primaryCta && <a class="btn primary" href={primaryCta.href}>{primaryCta.label}</a>}
    {secondaryCta && <a class="btn secondary" href={secondaryCta.href}>{secondaryCta.label}</a>}
  </div>
</header>

<style>
  .hero { display: grid; gap: var(--space-md); padding: var(--space-2xl) var(--space-lg); background: var(--color-surface-alt); border: 1px solid var(--color-border); border-radius: var(--radius-lg); box-shadow: var(--shadow-soft); }
  .eyebrow { margin: 0; font-size: 0.875rem; letter-spacing: 0.08em; text-transform: uppercase; color: var(--color-text-muted); }
  h1 { margin: 0; font-size: clamp(2rem, 3vw + 1rem, 3rem); }
  .subcopy { margin: 0; color: var(--color-text-muted); font-size: 1.125rem; }
  .actions { display: flex; gap: var(--space-sm); align-items: center; }
  .btn { text-decoration: none; padding: 0.625rem 0.9rem; border-radius: var(--radius-md); border: 1px solid var(--color-border); }
  .btn.primary { background: var(--color-accent); color: #081018; font-weight: 600; }
  .btn.secondary { color: var(--color-text); }
</style>


