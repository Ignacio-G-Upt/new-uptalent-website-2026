---
interface Props {
  id?: string;
  bg?: 'default' | 'alt';
  pad?: 'sm' | 'md' | 'lg' | 'xl';
  contained?: boolean;
}

const { id, bg = 'default', pad = 'xl', contained = true } = Astro.props as Props;
---

<section id={id} class={`section ${bg} ${pad}`}>
  <div class={contained ? 'container' : ''}>
    <slot />
  </div>
  
</section>

<style>
  .section { padding: var(--space-xl) var(--space-lg); }
  .section.alt { background: var(--color-surface-alt); }
  .section.sm { padding: var(--space-md) var(--space-lg); }
  .section.md { padding: var(--space-lg) var(--space-lg); }
  .section.xl { padding: var(--space-2xl) var(--space-lg); }
  .container { width: min(72rem, 100% - 2 * var(--space-lg)); margin-inline: auto; }
</style>

